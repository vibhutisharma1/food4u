<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question_1_wrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuestionOne">

    <TextView
        android:id="@+id/what_age_ra2"

        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal|top"
        android:text="What is Your Health Goal?"
        android:textAppearance="@style/what_age_ra"
        android:textColor="#303030"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHealth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/what_age_ra2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp" />


</RelativeLayout>