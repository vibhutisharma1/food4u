<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuestionTwo">


    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="460dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/open_sans"
        android:text="Show me the Recipes!" />

    <ScrollView
        android:id="@+id/content"
        android:layout_width="414dp"
        android:layout_height="744dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp">

    </ScrollView>

    <TextView
        android:id="@+id/tvPersonalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal|top"
        android:text="Personal Info"
        android:textAppearance="@style/what_age_ra"
        android:textColor="#303030"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPersonalInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/tvAge"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Age"
        android:inputType="number" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPersonalInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/open_sans"
        android:text="Enter your age:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAge"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/open_sans"
        android:text="Height:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etFeet"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAge"
        android:layout_marginStart="40dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/tvHeight"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Feet"
        android:inputType="number" />

    <EditText
        android:id="@+id/etInch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAge"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/etFeet"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Inches"
        android:inputType="number" />

    <EditText
        android:id="@+id/etLbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFeet"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/tvWeight"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="lbs"
        android:inputType="number" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/open_sans"
        android:text="Weight:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWeight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/open_sans"
        android:text="Activity:"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/activityDropdown"
        android:layout_width="216dp"
        android:layout_height="36dp"
        android:layout_below="@+id/etLbs"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/genderDropdown"
        android:layout_width="216dp"
        android:layout_height="36dp"
        android:layout_below="@+id/activityDropdown"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/open_sans"
        android:text="Gender"
        android:textSize="20sp" />


</RelativeLayout>